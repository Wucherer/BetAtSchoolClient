@using BetAtSchoolClient.Models;
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Leaderboard</h2>

<ol>
    @for (int i = 0; i < Model.Count; i++)
    {
        if (i > 2)
        {
            <li id="player" + i class="other">@Model[i].name - @Model[i].credit Punkte - Zeitpunkt: @Model[i].StartZeit Uhr</li>
        }
        else
        {
            if (i == 2)
            {
                <li id="player" + i class="third">@Model[i].name - @Model[i].credit Punkte - Zeitpunkt: @Model[i].StartZeit Uhr</li>
            }
            else
            {
                if (i == 1)
                {
                    <li id="player" + i class="second">@Model[i].name - @Model[i].credit Punkte - Zeitpunkt: @Model[i].StartZeit Uhr</li>
                }
                else
                {
                    <li id="player" + i class="first">@Model[i].name - @Model[i].credit Punkte - Zeitpunkt: @Model[i].StartZeit Uhr</li>
                }
            }
        }
    }
</ol>


<style>
    ol {
        margin: 40px;
        list-style-type: decimal;
        text-align: -moz-center;
        text-align: -webkit-center;
    }

    h2 {
        margin-left: 40px;
        color: dodgerblue;
        text-align: center;
        font-size: 25px;
        border-bottom-style: solid;
        border-bottom-color: dodgerblue;
    }

    li {
        padding: 15px;
        font-size: 15px;
        width: 35%;
        margin-bottom: 20px;
    }

    #body {
        background-color: snow;
    }

    .first {
        font-size: 30px;
        border-bottom-color: gold;
        border-bottom-style: double;
        width: 40%;
    }

    .second {
        font-size: 25px;
        border-bottom-color: silver;
        border-bottom-style: double;
        width: 37.5%;
    }

    .third {
        font-size: 20px;
        border-bottom-color: #b58007;
        border-bottom-style: double;
    }

    footer {
        background-color: snow;
    }
</style>