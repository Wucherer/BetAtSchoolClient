@using BetAtSchoolClient.Models;
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Leaderboard</h2>

<ol>
    @for(int i = 0; i < Model.Count; i++)
    {
        <li id="player" + i>Player: @Model[i].name | Score: @Model[i].credit | Zeitpunkt: @Model[i].StartZeit</li>
    }
</ol>


<style>
    ol {
        margin: 40px;
    }
    h2 {
        margin-left: 40px;
    }

    li {
        padding: 15px;
    }
</style>